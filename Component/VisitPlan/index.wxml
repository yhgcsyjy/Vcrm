<!--Component/VisitPlan/index.wxml-->
<template name="VisitPlanComponent">
  <navigator url='{{visitPlanUrl}}{{visitPlanId}}' class='customerItem-bg' style='display: flex;flex-direction: column; align-items:left; margin:10px;padding:5px;background-color: white;border-bottom: 1px solid aliceblue;'>
    <view class='customerItem-text'>
      <view class='customerItem-text-l' style='border-right:0px solid #D9D9D9;padding-right:10px'>
        <text class="customerItem-text">{{createrName}}</text> 
        <view style='font-size:14px;'>
        <text>{{strReportDate}}</text>
         <text style='padding-left:50px'>{{planYear}}/{{planMonth}}</text>
        </view>
        <view>
          <text style='border: 1px solid #1AAD00;padding:2px 10px;color:#1AAD00;font-size:14px'>{{sales_Team}}</text>
           <text style='padding-left:10px;font-size:14px;'>{{sales_Leader}}/{{sales_Assistant}}/{{sales}}</text>
        </view>
      </view>
      <view class='customerItem-text-r'>
         <text style='padding-left:0px; color:red;font-size:14px'>{{customer_Class}}</text>
         <text style='margin-right:0px;padding-left:40px; color:red;font-size:14px'>{{strCreateDT}}
         </text>
      </view>
    </view>
  </navigator>
</template>
