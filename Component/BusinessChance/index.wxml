<!--Component/BusinessChance/index.wxml-->
<template name="BusinessChanceComponent">
  <navigator url='{{busChanceUrl}}{{businessChanceId}}' class='customerItem-bg' style='display: flex;flex-direction: column; align-items:left; margin:10px;padding:5px;background-color: white;border-bottom: 1px solid aliceblue;'>
    <view class='customerItem-text'>
      <view class='customerItem-text-l' style='border-right:0px solid #D9D9D9;padding-right:10px'>
        <text class="customerItem-text">{{chanceName}}</text> 
        <view style='font-size:14px;'>
        <text style='border: 0px solid #1AAD00;padding-left:0px;color:#1AAD00;font-size:14px'>{{customer_Name}}</text>
         <text style='padding-left:20px; color:red;font-size:14px'>{{salesAmount}}</text>
         <text style='padding-left:20px; color:red;font-size:14px'>{{salesStage}}</text>
        </view>
        <view>
           <text style='padding-left:0px;font-size:14px;'>{{chanceSource}}</text>
           <text style='padding-left:20px;font-size:14px'>{{statementDate}}</text>
           <text style='padding-left:20px;font-size:14px'>{{createrName}}</text>
        </view>
      </view>
    </view>
  </navigator>
</template>
